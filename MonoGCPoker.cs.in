using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Reflection;
using System.Threading;
using System.Runtime.InteropServices;
using System.IO;

namespace MonoGC {
	public class Poker {
		public static void GenerateHeapDump ()
		{
			int i;

			for (i = 0; i < 5; i ++) {
				GC.Collect();
				GC.WaitForPendingFinalizers();
				GC.Collect();
				GC.WaitForPendingFinalizers();
			}

			try {
#if ANDROID
				generate_heap_dump ("@ANDROID_DUMP_PATH@");
#else
				generate_heap_dump ("heap-graph.dot");
#endif
			}
			catch (DllNotFoundException) {
				Console.Error.WriteLine ("couldn't find libpoker.");
			}
		}

#if ANDROID
		[DllImport ("libpoker.so")]
#else
		[DllImport ("libpoker")]
#endif
		extern static void generate_heap_dump (string path);
	}
}